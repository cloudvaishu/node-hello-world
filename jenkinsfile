pipeline {
    agent any

    tools {
        nodejs "node22"
    }

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/cloudvaishu/node-hello-world.git'
            }
        }

        stage('Debug Node') {
            steps {
                sh '''
                    echo "ðŸ” Verifying Node.js and npm setup..."
                    node -v
                    npm -v
                    echo "ðŸ“ Listing files in workspace:"
                    ls -l
                    echo "ðŸ“„ Showing contents of app.js:"
                    cat app.js
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run App') {
            steps {
                sh '''
                    echo "ðŸš€ Starting Node.js app..."
                    nohup npm start > app.log 2>&1 &
                    sleep 5
                    echo "ðŸ“„ Last 10 lines of app.log:"
                    tail -n 10 app.log
                '''
            }
        }
    }
}
