pipeline {
    agent any

    tools {
        nodejs "node22"
    }

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/cloudvaishu/node-hello-world.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run App') {
            steps {
                sh '''
                    nohup npm start > app.log 2>&1 &
                    sleep 5
                    tail -n 10 app.log
                '''
            }
        }
    }
}
